<p id="notice"><%= notice %></p>

<h1>All the Pets</h1>


<div class="row">
  <% @pets.each do |pet| %>
  <div class="col-md-3">
   <div class="panel panel-default">
    <div class="panel-body">
      <h1><%= pet.name %></h1>
      <h3><%= pet.age %></h3>
      <h3><%= pet.breed %></h3>
      <td><%= link_to 'Show', pet, class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-primary" %></td>
      <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
    </div>
  </div>
</div>    
<% end %>
</div>


<br>

<%= link_to 'New Pet', new_pet_path, class: "btn btn-primary" %>
