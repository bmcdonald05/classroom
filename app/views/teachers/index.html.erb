<p id="notice"><%= notice %></p>

<h1>Listing Teachers</h1>


<div class="row">
  <% @teachers.each do |teacher| %>
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <h1><%= teacher.name %></h1>
          <h3><%= teacher.subject %></h3>
          <td><%= link_to 'Show', teacher, class: "btn btn-primary" %></td>
          <td><%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
        </div>
      </div>
    </div>  
  <% end %>
</div>

<br>
